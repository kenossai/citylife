<script>
function playVideo(videoId) {
    // Hide all other players
    document.querySelectorAll('.video-player-container, .audio-player-container').forEach(el => {
        el.style.display = 'none';
    });
    
    // Show this video player
    const player = document.getElementById('video-' + videoId);
    if (player) {
        player.style.display = 'block';
        player.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }
}

function closeVideo(videoId) {
    const player = document.getElementById('video-' + videoId);
    if (player) {
        player.style.display = 'none';
        // Stop video by reloading iframe
        const iframe = player.querySelector('iframe');
        if (iframe) {
            const src = iframe.src;
            iframe.src = '';
            iframe.src = src;
        }
    }
}

function playAudio(audioId) {
    // Hide all other players
    document.querySelectorAll('.video-player-container, .audio-player-container').forEach(el => {
        el.style.display = 'none';
    });
    
    // Pause all audio players
    document.querySelectorAll('audio').forEach(audio => {
        audio.pause();
    });
    
    // Show this audio player
    const player = document.getElementById('audio-' + audioId);
    if (player) {
        player.style.display = 'block';
        player.scrollIntoView({ behavior: 'smooth', block: 'center' });
        
        // Auto-play the audio
        const audio = player.querySelector('audio');
        if (audio) {
            audio.play();
        }
    }
}

function closeAudio(audioId) {
    const player = document.getElementById('audio-' + audioId);
    if (player) {
        const audio = player.querySelector('audio');
        if (audio) {
            audio.pause();
            audio.currentTime = 0;
        }
        player.style.display = 'none';
    }
}
</script>

