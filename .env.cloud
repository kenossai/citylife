# Laravel Cloud Environment Configuration
# Copy these variables to your Laravel Cloud environment settings

# Application
APP_NAME="City Life Church"
APP_ENV=production
APP_KEY=  # Generate with: php artisan key:generate --show
APP_DEBUG=false
APP_URL=https://your-app.laravel.cloud

# Locale
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error
LOG_STACK=daily

# Database (Laravel Cloud provides these automatically)
DB_CONNECTION=mysql
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_DATABASE=${DB_DATABASE}
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}

# Cache & Session (Use Redis on Laravel Cloud for better performance)
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# Queue (Use Redis for production)
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database

# Redis (Laravel Cloud provides)
REDIS_CLIENT=phpredis
REDIS_HOST=${REDIS_HOST}
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_PORT=${REDIS_PORT}
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@citylifecc.com
MAIL_FROM_NAME="City Life Church"

# SMS - Vonage/Nexmo
VONAGE_KEY=your-vonage-key
VONAGE_SECRET=your-vonage-secret
VONAGE_SMS_FROM="CityLife"

# File Storage (Use S3 for Laravel Cloud)
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=citylife-storage
AWS_URL=https://citylife-storage.s3.amazonaws.com
AWS_USE_PATH_STYLE_ENDPOINT=false

# Asset Bundling
VITE_APP_NAME="${APP_NAME}"
ASSET_URL=https://your-app.laravel.cloud

# PayPal (if using)
PAYPAL_MODE=live
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Backup
BACKUP_DISK=s3

# Performance
OCTANE_SERVER=roadrunner
PHP_OPCACHE_ENABLE=1

# Security
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax
