# Performance Optimized Environment Configuration
# Copy these settings to your .env file for better performance

# Enable OpCache for PHP (if available)
# Add these to your php.ini:
# opcache.enable=1
# opcache.memory_consumption=256
# opcache.max_accelerated_files=20000
# opcache.validate_timestamps=0 (for production)
# opcache.revalidate_freq=0 (for production)

# Cache Configuration
CACHE_STORE=file
# CACHE_STORE=redis  # Use Redis if available for better performance

# Session Configuration
SESSION_DRIVER=file
# SESSION_DRIVER=redis  # Use Redis if available

# Queue Configuration
QUEUE_CONNECTION=sync
# QUEUE_CONNECTION=redis  # Use Redis for better queue performance

# Database Query Caching
# Add to config/database.php connections
# 'options' => [
#     PDO::ATTR_EMULATE_PREPARES => false,
#     PDO::ATTR_STRINGIFY_FETCHES => false,
# ]

# Optimize PHP CLI Server Workers
PHP_CLI_SERVER_WORKERS=8

# Disable debug in production for better performance
# APP_DEBUG=false

# Log Configuration for Performance
LOG_CHANNEL=single
LOG_LEVEL=error

# Disable unnecessary features in development
# TELESCOPE_ENABLED=false
# DEBUGBAR_ENABLED=false
